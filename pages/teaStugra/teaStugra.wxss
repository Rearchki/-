/* pages/teaStugra/teaStugra.wxss */
.container{
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height:1000rpx;
  padding:20rpx;
  width:700rpx;
}
.title{
  font-size:40rpx;
}

.subtitle{
  font-size:35rpx;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.bar{
  height:150rpx;
  width:700rpx;
  padding-left:30rpx;
  padding-right:30rpx;
}

.search {
  background: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.search-img{
  margin:auto 0 auto 20rpx;
}
.search input{
  height: 100%;
  width: 600rpx;
  margin-left: 10px;
  font-size: 30rpx;
}
.clear-img{
  margin:auto 0 auto 20rpx;
}
.scroll-view {
  margin-left: 20px;
  margin-bottom: 5px;
  margin-right: 20px;
  font-size:40rpx;
  background-color:white;
  border:solid 1px gray;
}
.user-name{
    width: 100%;
    padding: 20rpx;
    font-size: 33rpx;
    border-bottom: 1px solid #e2e2e2;
}
.lesson{
  padding-left:30rpx;
  height: 30px;
  border: solid 1px gray;
}

image{
  height:200rpx;
  width:200rpx;
}
.hang{
  display:flex;
  flex-direction:row;
  justify-content: center;
  align-items: center;
}
.lie{
  display:flex;
  flex-direction:column;
  justify-content: space-evenly;
  align-items: center;
  width:250rpx;
}