/* pages/inquire/inquire.wxss */
.container{
  height:1100rpx;
  display:flex;
  flex-direction:column;
  justify-content: space-around;
  align-items:center;
  

}
.contents{
  height:700rpx;
  width:600rpx;
  display:flex;
  flex-direction:column;
  justify-content: space-around;
  align-items:center;
  padding-left:20rpx;
}
.title{
  font-size:40rpx;
}
.item{
  font-size:30rpx;
}
.bar{
  height:80rpx;
  width:500rpx;
  border:3rpx solid black;
  border-radius:10rpx;
  padding-top:20rpx;
  padding-left:10rpx;
  /* background-color: pink; */
}


.page{
  display: flex;
  justify-content: center;
}
.searchbox{
  display:flex;
  flex-direction: row;
  border:1px solid #aaa;
  border-radius: 20px;
  width: 200px;
  height: 40px;
  align-items: center;
}
.input{
  width: 150px;
  nav-left: 12px;
  font-size: 20px;
}

 .select_box{
  background: #fff;
  width: 200px;
  height: 40px;
  position: relative;
 }
 .select{
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  border:1px solid #aaa;
  border-radius: 1rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
 }
 .select_text{
  font-size: 40rpx;
  flex: 1;
 }


 .option_box{
  position: absolute;
  top: 100rpx;
  width: 100%;
  border:1px solid #aaa;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
 }
 .option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #aaa;
  padding: 10rpx;
 }